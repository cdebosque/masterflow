<?xml version="1.0" encoding="UTF-8"?>
<interface type="import" model="product">
    <observers>
        <observer>Observer</observer>
    </observers>	
    <in>
       <connection type="mage">
                <path>{dpam/mage/path}</path>
                 <apiclass>Ocpm_Antidot_Model_Catalog_Product_Api</apiclass>
                <apimethod>items</apimethod>
        </connection>
        <format type="array"/>
    </in>
    <out>
        <connection type="file">
            <mode>w+</mode>
            <file>catalog-DPAM-fr.xml</file>
             <plugins>
                <plugin type="unzip">
                  <archiveFile>{php::date(Ymd)}_full_DPAM_catalog.zip</archiveFile>
                </plugin>
                <plugin type="sftp">
                    <server>{dpam/antidot/server}</server>
                    <localFile>{php::date(Ymd)}_full_DPAM_catalog.zip</localFile>
                    <remoteFile>{php::date(Ymd)}_full_DPAM_catalog.zip</remoteFile>
                    <user>{dpam/antidot/user}</user>
                    <password>{dpam/antidot/password}</password>
                    <remoteDir>{dpam/antidot/remoteDir}</remoteDir>
                    <pubkeyfile>{dpam/antidot/pubkeyfile}</pubkeyfile>
                    <privkeyfile>{dpam/antidot/privkeyfile}</privkeyfile>
                    <override>1</override>
                </plugin>
            </plugins>   
        </connection>
        <format type="xml">
          <xmlNodeRoot>catalog</xmlNodeRoot>
        </format>
    </out>    
</interface>