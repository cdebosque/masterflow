{% extends 'layout.html.twig' %}

{% block title %}Ajout d'un utilisateur{% endblock %}
{% block pageHeaderTitleHtml %}Ajout d'un utilisateur{% endblock %}

{% block content %}

        {% if error %}
            <div class="alert alert-danger">{{ error|nl2br }}</div>
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('alert') %}
            <div class="alert alert-success text-center">
              <div class="alert"><strong>{{ flashMessage  }}</strong></div>
            </div>
        {% endfor %}

        <form class="form-horizontal" method="POST">

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-name">Nom d'utilisateur</label>
                <div class="col-sm-8">
                    <input class="form-control" name="name" type="text" id="input-name" placeholder="Entre le nom sous lequel l'utilisateur va apparaitre" value="{{ name }}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-email">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" name="email" type="email" id="input-email" placeholder="Email" required value="{{ email }}">
                </div>
            </div>

            {% if isUsernameRequired %}
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-username">Username</label>
                    <div class="col-sm-8">
                        <input class="form-control" name="username" type="text" id="input-username" placeholder="Username" required value="{{ username }}">
                    </div>
                </div>
            {% endif %}

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-password">Saisissez votre mot de passe</label>
                <div class="col-sm-8">
                    <input class="form-control" name="password" type="password" id="input-password" required placeholder="Mot de passe">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-confirm-password">Confirmez votre mot de passe</label>
                <div class="col-sm-8">
                    <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="Mot de passe">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">Ajouter l'utilisateur</button>
                </div>
            </div>
        </form>
{% endblock %}
